<Window x:Class="DofLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DofLauncher"
        mc:Ignorable="d"
        Title="滑里稽登陆器" Height="247" Width="400" Closed="Window_Closed">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Uid}"></TextBox>
            <TextBox Text="{Binding Username}"></TextBox>
            <TextBox Text="{Binding UserPwd}"></TextBox>
            <TextBox Text="{Binding MysqlIP}"></TextBox>
            <TextBox Text="{Binding MysqlPort}"></TextBox>
            <TextBox Text="{Binding MysqlAcc}"></TextBox>
            <TextBox Text="{Binding MysqlPwd}"></TextBox>
            <Button Name="BtnLogin" Click="BtnLogin_Click">用户名密码登录</Button>
            <Button Name="BtnUIDLogin" Click="BtnUIDLogin_Click">UID登录</Button>
            <Button Name="BtnReg" Click="BtnReg_Click">注册</Button>
            <Button Name="BtnUpdate" Click="BtnUpdate_Click">检查更新</Button>
        </StackPanel>
    </Grid>
</Window>
